<?xml version='1.0' encoding='utf-8'?>
<widget id="br.fib.lp5" version="1.1.1" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>aula0411</name>
    <description>
        A sample Apache Cordova application that responds to the deviceready event.
    </description>
    <author email="vitor.barbieri19@gmail.com" href="http://cordova.io">
        Vitor
    </author>
    <content src="index.html" />
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <plugin name="cordova-plugin-device" spec="*" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:Tirar Foto" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:Tirar Foto" />
        <allow-intent href="itms-apps:*" />
    </platform>
    <preference name="Orientation" value="portrait"/>
    <preference name="Fullscreen" value="true" />
    <preference name="DisallowOverscroll"
 value="true" />

    <engine name="android" spec="~5.2.2" />
    <engine name="browser" spec="~4.1.0" />
    <plugin name="cordova-plugin-camera" spec="~2.3.0" />
</widget>
